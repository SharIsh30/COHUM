<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Help">
        <Preference
            android:icon="@drawable/ic_subject"
            android:title="Help for Tracking"
            android:key="@string/key_help_tracking"/>

        <Preference
            android:icon="@drawable/ic_subject"
            android:title="Help for Geofencing"
            android:key="@string/key_help_geofence"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Feedback">
        <Preference
            android:summary="@string/summary_faq"
            android:title="@string/title_faq">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/url_faq" />
        </Preference>
        <Preference
            android:icon="@drawable/ic_feedback"
            android:key="@string/key_send_feedback"
            android:summary="@string/summary_support"
            android:title="@string/title_send_feedback" />
    </PreferenceCategory>
    <PreferenceCategory android:title="About us">
        <Preference
            android:key="@string/key_about_us"
            android:summary="@string/summary_about" />
    </PreferenceCategory>
</PreferenceScreen>
